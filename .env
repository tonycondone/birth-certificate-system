# Application Settings
APP_NAME="Digital Birth Certificate System"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=birth_certificate_system
DB_USER=root
DB_PASS=1212

# Session Configuration
SESSION_LIFETIME=1800
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Mail Configuration
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@birthcert.gov
MAIL_FROM_NAME="${APP_NAME}"

# SMS Configuration
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_account_sid
SMS_AUTH_TOKEN=your_auth_token
SMS_FROM_NUMBER=your_twilio_number

# File Upload
UPLOAD_MAX_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=public/uploads

# Security
HASH_ALGORITHM=PASSWORD_DEFAULT
MIN_PASSWORD_LENGTH=8
PASSWORD_REQUIRES_NUMBERS=true
PASSWORD_REQUIRES_SYMBOLS=true
CSRF_LIFETIME=7200

# Certificate Generation
CERTIFICATE_PREFIX=BC
QR_CODE_SIZE=300
WATERMARK_PATH=resources/watermark.png

# Blockchain Simulation (MVP)
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_PROVIDER=local
BLOCKCHAIN_API_KEY=your_api_key

# Notification Settings
NOTIFICATION_CHANNELS=email,sms
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true

# Role Configuration
ALLOWED_ROLES=parent,hospital,registrar,admin
PARENT_REQUIRES_NATIONAL_ID=true
HOSPITAL_REQUIRES_LICENSE=true

# Development
DEV_MODE=true
LOG_LEVEL=debug
ERROR_REPORTING=E_ALL