# Application
APP_NAME="Digital Birth Certificate System"
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_HOST=localhost
DB_NAME=birth_certificate_system_test
DB_USER=root
DB_PASS=

# WebSocket
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=6001
WEBSOCKET_SSL=false

# Security
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
CSRF_LIFETIME=7200

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=public/uploads

# Certificate Generation
CERTIFICATE_PREFIX=BC-TEST
QR_CODE_SIZE=300
WATERMARK_PATH=resources/watermark.png

# Role Configuration
ALLOWED_ROLES=parent,hospital,registrar,admin
PARENT_REQUIRES_NATIONAL_ID=true
HOSPITAL_REQUIRES_LICENSE=true

# Testing
TESTING_ENABLED=true
SKIP_2FA_IN_TESTS=true