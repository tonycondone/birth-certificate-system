# Birth Certificate System Production Configuration

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_KEY=${APP_KEY}
APP_URL=https://birthcertificate.yourdomain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=${DB_HOST}
DB_PORT=3306
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# Security Configuration
JWT_SECRET=${JWT_SECRET}
2FA_SECRET=${2FA_SECRET}
CSRF_PROTECTION=true

# Logging Configuration
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_MAX_FILES=30

# Performance Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=3600

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=${MAIL_HOST}
MAIL_PORT=587
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Birth Certificate System"

# Monitoring Configuration
SENTRY_LARAVEL_DSN=${SENTRY_DSN}

# Additional Security Headers
HSTS_ENABLED=true
CSP_ENABLED=true

# Compliance Settings
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# Performance Optimization
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_MEMORY_CONSUMPTION=256
PHP_OPCACHE_INTERNED_STRINGS_BUFFER=16
PHP_OPCACHE_MAX_ACCELERATED_FILES=10000 